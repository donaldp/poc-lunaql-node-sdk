{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "lib",
		"target": "es2020", // Node.js 14
    "moduleResolution": "Node",
		"lib": [
			"es2020"
		],
		"noPropertyAccessFromIndexSignature": false,
    "noUnusedParameters": false,
		"isolatedModules": true
	},
	"include": [
		"src"
	],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	}
}